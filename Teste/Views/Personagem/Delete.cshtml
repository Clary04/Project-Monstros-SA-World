@model Teste.Models.Personagem

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-light pl-3">Remover Personagem</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="PersonagemName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Cenario"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="PersonagemName" disabled class="form-control" style="border-color: black"/>
                       
                    </div>

                    <div class="col-6">
                        <input asp-for="Cenario" disabled class="form-control" style="border-color: black"/>
                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Remover" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-75">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}