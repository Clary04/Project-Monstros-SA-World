@model Teste.Models.Personagem

<form method="post" asp-action="Create" >
    <div class="border p-3">
        <div class="form-group row" >
            <h2 class="text-light pl-3">Adicionar personagem</h2>
        </div>
        <div class="row">
            <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                <label asp-for="PersonagemName" ></label>
            </div>
            <div class="col-6">
                <label asp-for="Cenario"></label>
            </div>      
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="PersonagemName" class="form-control" style="border-color:black"/>
            <span asp-validation-for="PersonagemName" class="text-danger"></span>
            </div>

            <div class="col-6">
                <input asp-for="Cenario" class="form-control" style="border-color:black"/>
                <span asp-validation-for="Cenario" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 text-center row">
                <div class="col">
                    <input type="submit" class="btn btn-success w-75" value="Adicionar" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-75">Cancelar</a>
                </div>
             </div>
        </div>
    </div>
 </div>
 </div>

</form>

@section Scripts{ 
    @{<partial name="_ValidationScriptsPartial"/>}
}